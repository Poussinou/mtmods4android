<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="@dimen/modlist_item_margin_x"
    android:layout_marginEnd="@dimen/modlist_item_margin_x"
    android:layout_marginTop="@dimen/modlist_item_margin_y"
    android:layout_marginBottom="@dimen/modlist_item_margin_y">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/modlist_item_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/modname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/modlist_item_text_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Modname"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/modlist_item_text_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="rubenwardy"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/modlist_item_text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Adds foo and bar to the game, along with x and ys. Adds foo and bar to the game, along with x and ys." />

    </LinearLayout>
</android.support.v7.widget.CardView>