<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginStart="@dimen/modlist_item_margin_x"
    android:layout_marginEnd="@dimen/modlist_item_margin_x"
    android:layout_marginTop="@dimen/modlist_item_margin_y"
    android:layout_marginBottom="@dimen/modlist_item_margin_y">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/modlist_item_padding">

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/modlist_item_text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Modname"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/modlist_item_text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="Adds foo and bar to the game." />

    </LinearLayout>
</android.support.v7.widget.CardView>